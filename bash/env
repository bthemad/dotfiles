############
## Locale ##
############
# Locale for iTerm
export LANG=ru_RU.UTF-8


############
## Editor ##
############
# If we got a TextMate, we'll use it. Otherwise, let's stick with vim
if [ -e /usr/bin/mate ]; then
    export EDITOR='mate -w'
else
    export EDITOR='vim'
fi


##########
## Path ##
##########
# path to web binaries
export PATH=/Applications/MAMP/Library/bin/:/Applications/MAMP/bin/php5/bin:~/bin/:$PATH
# path to kdiff3
export PATH=/Applications/Utilities/kdiff3.app/Contents/MacOS/:$PATH
# path to MacVim
export PATH=/Applications/MacVim.app/Contents/MacOS:$PATH
# Path to scheme
export PATH=/Applications/mzscheme/bin:$PATH

# Phing settings
export PHP_COMMAND=/Applications/MAMP/bin/php5/bin/php
export PHING_HOME=/Applications/MAMP/phing
export PHP_CLASSPATH=${PHING_HOME}/classes
export PATH=${PATH}:${PHING_HOME}/bin


####################
## Path shortcuts ##
####################
export trm=/Users/akudryashov/Documents/workspace/terminal
export aac=/Users/akudryashov/Documents/workspace/aboutacar
export asm=/Users/akudryashov/Documents/workspace/asiamotors
export stk=/Users/akudryashov/Documents/workspace/suntask
export pnt=/Users/akudryashov/Documents/workspace/pointer
