############
## Locale ##
############
# Locale for iTerm
export LANG=ru_RU.UTF-8


############
## Editor ##
############
# If we got a TextMate, we'll use it. Otherwise, let's stick with vim
if [ -e /usr/bin/mate ]; then
    export EDITOR='mate -w'
else
    export EDITOR='vim'
fi

# Open plain files with vim
for s in txt c cpp php js py rb; do
    alias -s $s='vim'
done

# Open strange files with open command on OS X
if [[ $OSTYPE[1,6] == "darwin" ]]; then
    for s in mp3 wav aac m4a \
        avi mp4 m4v mov qt mpg mpeg mkv \
        jpg png psd bmp gif tif tiff \
        ps pdf html dmg; do
        alias -s $s=open
    done
fi


##########
## Path ##
##########
# path to kdiff3
path=(/Applications/Utilities/kdiff3.app/Contents/MacOS $path)
# Path to scheme
path=(/Applications/mzscheme/bin $path)
# Path to bin
path=(/usr/local/bin $path)
# Path to sbin
path=(/usr/local/sbin $path)
# path to MacVim
path=(/Applications/MacVim.app/Contents/MacOS $path)

