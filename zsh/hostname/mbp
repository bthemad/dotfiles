###############
### Aliases ###
###############
alias ack='ack -a'
# ServerStack Stuff #
# Nginx
alias ngstart='sudo /usr/local/sbin/nginx'
alias ngstop='sudo /usr/local/sbin/nginx -s stop'
alias ngres='sudo /usr/local/sbin/nginx -s reload'
alias ngcd='cd /usr/local/Cellar/nginx/0.7.67/conf/'
# Mysql
alias mystart='/usr/local/bin/mysql.server start'
alias mystop='/usr/local/bin/mysql.server stop'
alias myres='/usr/local/bin/mysql.server restart'
# PHP-FPM
alias fpstart='sudo /usr/local/bin/php-fpmd start'
alias fpstop='sudo /usr/local/bin/php-fpmd stop'
alias fpres='sudo /usr/local/bin/php-fpmd restart'
# PHP-Stack
alias phpstart='sudo /usr/local/sbin/nginx && /usr/local/bin/mysql.server start && sudo /usr/local/bin/php-fpmd start'
alias phpstop='sudo /usr/local/sbin/nginx -s stop && /usr/local/bin/mysql.server stop && sudo /usr/local/bin/php-fpmd stop'
alias phpres='sudo /usr/local/sbin/nginx -s reload && /usr/local/bin/mysql.server restart && sudo /usr/local/bin/php-fpmd restart'

# VM server
alias vmstart='nohup VBoxHeadless --startvm "srv" --vrde=off > /dev/null &'
alias vmstop='VBoxManage controlvm "srv" poweroff'

# Try out git-smart
alias gsull="git smart-pull"
alias gsmrg="git smart-merge"
alias gsml="git smart-log"

###################
### Environment ###
###################
# Locale for iTerm
export LANG=en_US.UTF-8
export EDITOR='vim'
alias mvd="mvim -R - &>/dev/null"

# Use emacs keybinding for editing (specially for tmux)
bindkey -e

##########
## Path ##
##########
# Path to completions
fpath=(/usr/local/share/zsh-completions $fpath)
# path to kdiff3
export PATH=/Applications/Utilities/kdiff3.app/Contents/MacOS:$PATH
# Path to sbin
export PATH=/usr/local/sbin:$PATH
# Path to bin
export PATH=/usr/local/bin:$PATH
# Path to my bin
export PATH=/Users/alex/bin:$PATH

